# Copy to .env.local for local development

# AI Prediction APIs
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# Brave Search API (for fighter context enrichment)
# Free tier: 2,000 queries/month
# Sign up: https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=your-api-key

# Database
DATABASE_URL=postgresql://user:password@host:5432/postgres?schema=public
SHADOW_DATABASE_URL=postgresql://user:password@host:5432/postgres_shadow?schema=public
SENTRY_DSN=https://<backend_dsn>@oXXXX.ingest.sentry.io/YYYY
NEXT_PUBLIC_SENTRY_DSN=https://<frontend_dsn>@oXXXX.ingest.sentry.io/ZZZZ
SENTRY_TRACES_SAMPLE_RATE=0.2
NEXT_PUBLIC_SENTRY_TRACES_SAMPLE_RATE=0.1
NEXT_PUBLIC_SENTRY_REPLAY_SESSION_SAMPLE_RATE=0
NEXT_PUBLIC_SENTRY_REPLAY_ON_ERROR_SAMPLE_RATE=1
SCRAPER_CANCEL_THRESHOLD=3
SCRAPER_FIGHT_CANCEL_THRESHOLD=2
NEXT_PUBLIC_BASE_PATH=
SENTRY_TOKEN=sntryu_...

# Database Performance Monitoring
SLOW_QUERY_THRESHOLD_MS=1000
CRITICAL_QUERY_THRESHOLD_MS=5000
FREQUENT_QUERY_THRESHOLD=100
DISABLE_QUERY_MONITORING=false
QUERY_LOGGING_VERBOSE=false
